<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/container_thumb"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/tv_cate_title"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_thumb_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@android:color/holo_green_dark" />

                <ImageView
                    android:id="@+id/iv_thumb_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@android:color/holo_red_dark" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_thumb_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@android:color/holo_blue_dark" />

                <ImageView
                    android:id="@+id/iv_thumb_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@android:color/holo_orange_dark" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/container_thumb"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cate_photo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_try_again"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_photo_black_24dp"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorAccent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:padding="8dp"
                android:text="Hình Ảnh" />

            <TextView
                android:id="@+id/tv_cate_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_try_again"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_ondemand_video_black_24dp"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorAccent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:padding="8dp"
                android:text="Video" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>